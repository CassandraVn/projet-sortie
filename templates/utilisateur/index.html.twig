{% extends 'base.html.twig' %}

{% block title %}Utilisateur index{% endblock %}

{% block content %}
    <div class="row mt-5 text-center">
        <h1>Profils</h1>
    </div>
    {% if is_granted('ROLE_ADMIN') %}
        <div style="float: right;">
            <a class="btn btn-dark" style="color: #2c2c2c; text-decoration:none; --bs-btn-bg: #7bf; --bs-btn-border-color:#7bf;" href="{{ path('app_utilisateur_new') }}">Ajouter un utilisateur</a>
        </div>
    {% endif %}
    <br>
    <br>




    <div class="fondTab">
<table class="table">
        <thead>
            <tr>
                <th>Pseudo</th>
                <th>Nom</th>
                <th>Telephone</th>
                <th>Actif</th>
                <th>Mail</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for utilisateur in utilisateurs %}
{#            {{ include('utilisateur/_delete_form.html.twig') }}#}
            <tr>
                <td>{{ utilisateur.pseudo }}</td>
                <td>{{ utilisateur.prenom }} {{ utilisateur.nom }}</td>
                <td>{{ utilisateur.telephone }}</td>
                <td>{{ utilisateur.actif ? 'Yes' : 'No' }}</td>
                <td>{{ utilisateur.mail }}</td>
                <td>
                    <a href="{{ path('app_utilisateur_profil', {'id': utilisateur.id}) }}"><i class="bi bi-eye-fill"></i></a>
                    <a href="{{ path('app_utilisateur_edit', {'id': utilisateur.id}) }}"><i class="bi bi-pencil-fill"></i></a>

                    {% if is_granted('ROLE_ADMIN') %}
                        {% if utilisateur.actif %}
                          <a href="{{ path('app_utilisateur_actif_inactif', {'id': utilisateur.id}) }}">Rendre inactif</a>
                        {% else %}
                            <a href="{{ path('app_utilisateur_actif_inactif', {'id': utilisateur.id}) }}">Rendre actif</a>
                        {% endif %}
                        {{ include('utilisateur/_delete_form.html.twig') }}

{#                        <a href="{{ path('app_utilisateur_delete' , {'id': utilisateur.id}) }}"><i class="bi bi-trash"></i></a>#}
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>

        {% endfor %}
        </tbody>
    </table>
</div>



{% endblock %}
