{% extends 'base.html.twig' %}

{% block title %}Utilisateur index{% endblock %}

{% block content %}
    <div class="row mt-5 text-center">
        <h1>Profils</h1>
    </div>
    <br>
    <br>

<div class="fondTab">

<table class="table">
        <thead>
            <tr>
                <th>Pseudo</th>
                <th>Nom</th>
                <th>Telephone</th>
                <th>Actif</th>
                <th>Mail</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for utilisateur in utilisateurs %}
            <tr>
                <td>{{ utilisateur.pseudo }}</td>
                <td>{{ utilisateur.prenom }} {{ utilisateur.nom }}</td>
                <td>{{ utilisateur.telephone }}</td>
                <td>{{ utilisateur.actif ? 'Yes' : 'No' }}</td>
                <td>{{ utilisateur.mail }}</td>
                <td>
                    <a href="{{ path('app_utilisateur_profil', {'id': utilisateur.id}) }}"><i class="bi bi-eye-fill"></i></a>
                    <a href="{{ path('app_utilisateur_edit') }}"><i class="bi bi-pencil-fill"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}
