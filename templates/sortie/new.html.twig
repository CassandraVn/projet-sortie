{% extends 'base.html.twig' %}

{% block title %}New Sortie{% endblock %}

{% block content %}

    <div class="row mt-5 text-center">
        <h1>Creer une Sortie</h1>
    </div>

    <p>
        <a style="color: black" href="{{ path('app_sortie_index') }}"><i class="bi bi-arrow-left-circle"></i> Retour Ã  la liste</a>

    </p>


    {{form_start(sortForm)}}
    <div class="row mt-5">
        <div class="col-6 offset-3">
            <div class="row mt-7">
            {{ form_row(sortForm.nom) }}
        </div>
        <div class="row mt-7">
            {{ form_row(sortForm.dateHeureDebut) }}
        </div>
        <div class="row mt-7">
            {{ form_row(sortForm.duree) }}
        </div>

        <div class="row mt-7">
            {{ form_row(sortForm.dateLimiteInscription) }}
        </div>
        <div class="row mt-7">
            {{ form_row(sortForm.nbInscriptionMax) }}
        </div>
        <div class="row mt-7">
            {{ form_row(sortForm.infosSortie) }}
        </div>
        <div class="row mt-7">
            <a href="{{ path('app_lieu_new') }}"><i class="bi bi-plus-circle-fill"></i></a>
            {{ form_row(sortForm.lieu) }}
        </div>
        <div class="row mt-7">
            {{ form_row(sortForm.campus) }}
        </div>
        <div hidden class="row mt-7" >
             {{ form_row(sortForm.motifAnnulation) }}
        </div>
            <button class="btn btn-outline-primary" type="submit">Ajouter</button>
            {{form_end(sortForm)}}
        </div>
    </div>



    <button type="button" class="btn btn-primary" data-toggle="modal" data-target=".bd-example-modal-lg">Large modal</button>
    <div class="modal fade bd-example-modal-lg" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                {{form_start(lieuForm)}}
                {{ form_widget(lieuForm) }}
                <button class="btn btn-primary" type="submit">Ajouter</button>
                {{form_end(lieuForm)}}
            </div>
        </div>
    </div>



{% endblock %}



