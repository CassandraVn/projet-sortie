{% extends 'base.html.twig' %}

{% block title %}Edit Sortie{% endblock %}

{% block content %}
    <div class="row mt-5 text-center">
        <h1>Modifier une Sortie</h1>
    </div>




    {{form_start(sortForm)}}
    <div class="row mt-5">
        <div class="col-6 offset-3">
            <p>
                <a style="color: black" href="{{ path('app_sortie_index') }}"><i class="bi bi-arrow-left-circle"></i> Retour Ã  la liste</a>

            </p>

                {% for label,messages in app.flashes %}
                    {% for message in messages %}
                        <div class="row mt-4 alert alert-danger">
                            {{message}}
                        </div>
                    {% endfor %}
                {% endfor %}

            <div class="row mt-7">
                {{ form_row(sortForm.nom) }}
            </div>
            <div class="row mt-7">
                {{ form_row(sortForm.dateHeureDebut) }}
            </div>
            <div class="row mt-7">
                {{ form_row(sortForm.duree) }}
            </div>

            <div class="row mt-7">
                {{ form_row(sortForm.dateLimiteInscription) }}
            </div>
            <div class="row mt-7">
                {{ form_row(sortForm.nbInscriptionMax) }}
            </div>
            <div class="row mt-7">
                {{ form_row(sortForm.infosSortie) }}
            </div>
            <div class="row mt-7">
                <a href="{{ path('app_lieu_new') }}"><i class="bi bi-plus-circle-fill"></i></a>
                {{ form_row(sortForm.lieu) }}
            </div>

            <div class="row mt-7">
                {{ form_row(sortForm.campus) }}
            </div>
            <div hidden class="row mt-7" >
                {{ form_row(sortForm.motifAnnulation) }}
            </div>

               {{ include('sortie/_form.html.twig', {'button_label': 'Modifier'}) }}
            {{form_end(sortForm)}}
        </div>

    </div>



{% endblock %}
